<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_color">

    <RelativeLayout
        android:id="@+id/cardWelcomeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/background_welcome_in_card">

        <ImageView
            android:id="@+id/imgWelcomPicture"
            android:layout_width="321dp"
            android:layout_height="353dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            tools:srcCompat="@drawable/page_1" />

        <TextView
            android:id="@+id/txtWelcomeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgWelcomPicture"
            android:layout_centerHorizontal="true"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtWelcomeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtWelcomeTitle"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="16sp" />


    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnWelcomAccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardWelcomeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/background_blue_rounded"
        android:fontFamily="sans-serif"
        android:insetLeft="20dp"
        android:insetRight="20dp"
        android:text="Начать"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:backgroundTint="@color/green_welcome"
        tools:ignore="SpeakableTextPresentCheck" />

</RelativeLayout>