<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#3F51B5">

    <LinearLayout
        android:id="@+id/linerLayoutUpBarFragmentForCard"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/goback"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/imgBtnShareIt"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
            tools:src="?attr/actionModeShareDrawable" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrlFragmentForCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/linerLayoutUpBarFragmentForCard"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:id="@+id/linerLayoutMainFragmentForCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corners">

                <ImageView
                    android:id="@+id/imgDeskAvatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    tools:src="@tools:sample/avatars" />

                <ImageButton
                    android:id="@+id/btn3D"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/imgDeskAvatar"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/logo3d"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtDeskLinkName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/InfoAtDeskLinkName"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/txtDeskLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="по ссылке"
                    android:textColor="@color/yellow" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtDeskPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/InfoAtDeskPrice"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/txtDeskTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Имя"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtDeskDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="описание"
                android:textColor="@color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/txtDeskSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Параметры"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtDeskMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Основное"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtDeskWidthName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ширина: "
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtDeskWidth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="... см"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtDeskDepthName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Глубина: "
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtDeskDepth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="... см"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtDeskHeightName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Высота: "
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtDeskHeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="... см"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtDeskMaterialName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Материал: "
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtDeskMaterial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="атомы"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtDeskContriesName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Страна производства: "
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtDeskContries"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="СССР"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>


            <TextView
                android:id="@+id/txtDeskPack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Упаковка"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtDeskWeightName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Вес в упаковке: "
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtDeskWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="... см"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtDeskVolumeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Объём: "
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtDeskVolume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="... м3"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtDeskAssemblingName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Потребуется сборка: "
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtDeskAssembling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="вероятно"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgDeskPictureFragmentForCard"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/home3x" />

                <TextView
                    android:id="@+id/txtDeskSellerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Продавец: "
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtDeskSeller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ссылка"
                    android:textColor="@color/blue_for_card"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imgDeskPicture2FragmentForCard"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/wishlist3x" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/txtDeskBottomDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/InfoAtDeskBottomDescription"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp" />
        </LinearLayout>

    </ScrollView>
