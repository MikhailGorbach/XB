<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu.SettingsFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="226dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/upbcg"
        tools:srcCompat="@drawable/upbcg" />

    <TextView
        android:id="@+id/txtSettingName_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:text="Настройки"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtSettingName_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSettingName_1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="Выбрать"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtLinkSettingPrivatePolicy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="200dp"
        android:text="Политика конфиденциальности"
        android:textAlignment="center"
        android:textColor="#00B0FF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtLinkSettingTermsAndConditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtLinkSettingPrivatePolicy"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Правила и условия использования"
        android:textAlignment="center"
        android:textColor="#00B0FF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtLinkSettingFeedBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtLinkSettingTermsAndConditions"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Как связаться?"
        android:textAlignment="center"
        android:textColor="#00B0FF"
        android:textSize="20sp" />
    <!--
    <TextView
        android:id="@+id/txtLinkSettingScenes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtLinkSettingFeedBack"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Настройки сцены"
        android:textAlignment="center"
        android:textColor="#00B0FF"
        android:textSize="20sp" />
    -->
</RelativeLayout>