<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fefefe"
    android:clickable="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_exr_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/exr_margin"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="fdsafdas"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_exr_group"
            android:layout_width="@dimen/exr_iconSize"
            android:layout_height="@dimen/exr_iconSize"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/exr_margin"
            android:layout_marginRight="@dimen/exr_margin"
            app:srcCompat="@drawable/ic_expand_more_24dp" />
    </LinearLayout>

    <View
        android:id="@+id/line_exr_group"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="@dimen/exr_margin"
        android:layout_weight="1"
        android:background="@android:color/darker_gray" />

</LinearLayout>