<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_primary_variant">

    <RelativeLayout
        android:id="@+id/cardWelcomLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/background_welcome_in_card">

        <ImageView
            android:id="@+id/imgWelcomPicture"
            android:layout_width="321dp"
            android:layout_height="353dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            tools:srcCompat="@drawable/page_1" />

        <TextView
            android:id="@+id/txtWelcomeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgWelcomPicture"
            android:layout_centerHorizontal="true"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtWelcomeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtWelcomeTitle"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="14sp" />


    </RelativeLayout>

    <Button
        android:id="@+id/btnWelcomAccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardWelcomLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:backgroundTint="#32FF00"
        android:text="Начать"
        android:textColor="#000000"
        tools:ignore="SpeakableTextPresentCheck" />

</RelativeLayout>